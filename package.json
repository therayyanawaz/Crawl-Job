{
  "name": "crawl-job",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "module",
  "engines": { "node": ">=20.0.0" },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "start:verbose": "tsx src/main.ts --verbose",
    "start:prod": "node dist/main.js",
    "setup": "node model-select/dist/index.js",
    "setup:export": "node model-select/dist/index.js export",
    "setup:show": "node model-select/dist/index.js show",
    "setup:list": "node model-select/dist/index.js list",
    "setup:ollama": "bash scripts/setup-ollama.sh",
    "export": "tsx src/export.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "test": "npm run build && node tests/run.mjs",
    "test:verbose": "npm run build && node tests/run.mjs --verbose",
    "test:watch": "node --watch tests/run.mjs",
    "test:fast": "node tests/run.mjs",
    "archive": "tsx src/maintenance.ts archive",
    "archive:preview": "tsx src/maintenance.ts archive --dry-run",
    "archive:status": "tsx src/maintenance.ts status",
    "cleanup": "tsx src/maintenance.ts cleanup",
    "cleanup:preview": "tsx src/maintenance.ts cleanup --dry-run",
    "upload": "tsx src/maintenance.ts upload",
    "maintenance": "tsx src/maintenance.ts maintenance",
    "maintenance:dry": "tsx src/maintenance.ts maintenance --dry-run",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:check": "tsx -e \"import('./src/utils/db.js').then(m=>m.pingDb()).then(ok=>{ console.log(ok?'✓ DB reachable':'✗ DB unreachable'); process.exit(ok?0:1); })\" ",
    "env:check": "node scripts/validate-env.mjs",
    "benchmark:small": "npm run build && node scripts/benchmark-runner.mjs --profile small",
    "benchmark:medium": "npm run build && node scripts/benchmark-runner.mjs --profile medium",
    "benchmark:large": "npm run build && node scripts/benchmark-runner.mjs --profile large",
    "testsprite": "npx @testsprite/testsprite-mcp@latest"
  },
  "keywords": ["crawl-job", "web-scraping", "playwright", "crawlee", "india-jobs", "typescript", "postgresql", "ollama"],
  "author": "Md Rayyan Nawaz <therayyanawaz@gmail.com>",
  "license": "ISC",
  "description": "Crawl-Job: multi-platform crawler for the Indian job market — tiered scraping with Playwright, PostgreSQL, and Ollama LLM extraction",
  "dependencies": {
    "cheerio": "^1.2.0",
    "crawlee": "^3.16.0",
    "dotenv": "^17.3.1",
    "https-proxy-agent": "^7.0.6",
    "pg": "^8.18.0",
    "playwright": "^1.58.2",
    "turndown": "^7.2.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@types/node": "^25.3.0",
    "@types/turndown": "^5.0.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
